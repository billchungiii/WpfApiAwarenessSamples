<Window x:Class="EnumerateMonitorsByApiAware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnumerateMonitorsByApiAware"
        mc:Ignorable="d"
        Title="EnumerateMonitors By ApiAware" Height="450" Width="800">
    <Window.Resources >
        <Style TargetType="Button">
            <Setter Property="Width" Value="72"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="6"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Horizontal">
        <Button Content="Click" Click="Button_Click"/>
        <Button Content="Set 0" Click="Button_Click_1"/>
        <Button Content="Set 1" Click="Button_Click_2"/>
        <Button Content="Set 2" Click="Button_Click_3"/>
    </StackPanel>
</Window>
